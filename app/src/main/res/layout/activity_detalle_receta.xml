<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ar.edu.ort.wecook.DetalleReceta">
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Nombre Receta"
        android:textSize="40dp"
        android:textAlignment="center"

        android:id="@+id/miNombreReceta"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredientes"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/miNombreReceta"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/miDuracion">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miIngrediente1"
            android:textAlignment="center" />
        <View
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp"
            android:id="@+id/view1"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miIngrediente2"
            android:textAlignment="center" />
        <View
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp"
            android:id="@+id/view2"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miIngrediente3"
            android:textAlignment="center">

        </TextView>
        <View
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp"
            android:id="@+id/view3"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miIngrediente4"
            android:textAlignment="center" />
        <View
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp"
            android:id="@+id/view4"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miIngrediente5"
            android:textAlignment="center" />
        <View
            android:layout_gravity="center"
            android:id="@+id/view5"
            android:layout_width="200dp"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/miIngrediente6"
            />
        <View
            android:layout_gravity="center"
            android:id="@+id/view6"
            android:layout_width="200dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="2dp" />
    </LinearLayout>

    
    <TextView
        android:layout_above="@+id/cocinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duracion"
        android:layout_marginBottom="30dp"
        android:id="@+id/miDuracion"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cocinar"
        android:id="@+id/cocinar"
        android:onClick="ACocinar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
